extends Camera2D
class_name FollowCamera2D

# ------------------------------------------------------------------------------
# Export Variables
# ------------------------------------------------------------------------------

# ------------------------------------------------------------------------------
# Variables
# ------------------------------------------------------------------------------
var _focus_node : WeakRef = weakref(null)


# ------------------------------------------------------------------------------
# Override Methods
# ------------------------------------------------------------------------------
func _process(delta : float) -> void:
	var focus : Node2D = _focus_node.get_ref()
	if focus != null:
		global_position = lerp(global_position, focus.global_position, 0.7)

# ------------------------------------------------------------------------------
# Public Methods
# ------------------------------------------------------------------------------
func set_focus_node(focus : Node2D) -> void:
	_focus_node = weakref(focus)

