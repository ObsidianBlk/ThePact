extends Button



# ------------------------------------------------------------------------------
# Export Variables
# ------------------------------------------------------------------------------
@export_category("URL Button")
@export var url : String = ""


# ------------------------------------------------------------------------------
# Override Methods
# ------------------------------------------------------------------------------
func _ready() -> void:
	pressed.connect(_on_pressed)

# ------------------------------------------------------------------------------
# Handler Methods
# ------------------------------------------------------------------------------
func _on_pressed() -> void:
	if url != "":
		OS.shell_open(url)
